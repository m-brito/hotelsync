<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.edu.ifsp.hotelsync.application.controller.CreateProductController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="DESCRIPTION"/>
    <TextField fx:id="descriptionField"/>

    <Label text="PRICE"/>
    <TextField fx:id="priceField"/>

    <Button text="Create Product" onAction="#onCreateProductClick"/>
    <Button text="Cancel Creation" onAction="#onCancelProductClick"/>
</VBox>